<% include ./partials/header.ejs %>
  <div class="w-full h-screen bg-cover bg-center bg-[url(https://images.unsplash.com/photo-1604079628040-94301bb21b91?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MTB8fGFic3RyYWN0fGVufDB8fDB8fHww)]
              flex items-center justify-center">
    <div class="bg-white w-[25vw] px-11 py-10 rounded-[30px]">
      <h1 class="text-3xl text-center font-semibold text-zinc-700 tracking-tighter capitalize leading-none">Welcome to Pinterest</h1>
      <form action="/login" method="post">
        <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="text" name="username" placeholder="username">
        <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="password" name="password" placeholder="password">
        <a class="mt-2 font-semibold text-zinc-500 inline-block" href="">Forgot password ?</a>
        <input class="border-2 block mt-2 w-full px-3 py-2 bg-red-600 text-zinc-100 cursor-pointer rounded-full" type="submit" value="Login">
        <p class="text-xs font-semibold text-zinc-700 mt-10 w-2/3 mx-auto text-center">
          By continuing, you agree to Pinterest's
          Terms of Service, Privacy policy.
        </p>
      </form>
      <a class="inline-block mt-7 text-sm font-semibold text-zinc-700 text-center w-full" href="/register">Don't have an account ?</a>
    </div>
  </div>
