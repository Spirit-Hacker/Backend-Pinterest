<% include ./partials/header.ejs %>
  <div class="w-full h-screen bg-cover bg-center bg-[url(https://images.unsplash.com/photo-1604076850742-4c7221f3101b?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MjN8fGFic3RyYWN0fGVufDB8fDB8fHww)]
              flex items-center justify-center">
    <div class="bg-white w-[25vw] px-11 py-10 rounded-[30px]">
      <h1 class="text-3xl text-center font-semibold text-zinc-700 tracking-tighter capitalize leading-none">Create New Account</h1>
      <form action="/register" method="post">
        <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="text" name="username" placeholder="username">
        <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="text" name="name" placeholder="fullname">
        <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="email" name="email" placeholder="email">
        <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="number" name="contact" placeholder="contact">
        <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="password" name="password" placeholder="password">
        <input class="border-2 block mt-5 w-full px-3 py-2 bg-red-600 text-zinc-100 cursor-pointer rounded-full" type="submit" value="Create New Account">
        <p class="text-xs font-semibold text-zinc-700 mt-10 w-2/3 mx-auto text-center">
          By continuing, you agree to Pinterest's
          Terms of Service, Privacy policy.
        </p>
      </form>
      <a class="inline-block mt-7 text-sm font-semibold text-zinc-700 text-center w-full" href="/">Already have an account ?</a>
    </div>
  </div>
<% include ./partials/footer.ejs %>