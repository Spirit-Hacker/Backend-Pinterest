<% include ./partials/header.ejs %>
    <div class="w-full min-h-screen px-10 py-5">
        <h1>Create a new post</h1>
        <hr class="opacity-70 mt-3 mb-3">
        <form action="/createpost" method="post" enctype="multipart/form-data">
            <input class="block w-1/3 py-2 left-0" type="file" name="postimage">
            <input class="block w-1/3 px-3 py-2 mt-2 border-2 rounded-md" type="text" placeholder="Title" name="title">
            <textarea class="block w-1/3 h-60 px-3 py-2 mt-2 border-2 rounded-md" type="text" placeholder="Description" name="description"></textarea>
            <input class="block w-1/3 px-3 py-2 mt-2 bg-red-600 text-white rounded-md cursor-pointer" type="submit" value="Create Post">
        </form>
    </div>
<% include ./partials/footer.ejs %>