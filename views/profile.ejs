<% include ./partials/header.ejs %>
  <div class="profile w-full min-h-screen bg-white text-zinc-800 pt-1">
    <form id="uploadform" hidden action="/fileupload" method="post" enctype="multipart/form-data">
      <input type="file" name="image">
    </form>
    <div class="profiledetails flex flex-col items-center justify-center mt-12">
      <div class="relative">
        <span id="uploadicon" class="w-8 h-8 cursor-pointer absolute bottom-0 right-0 rounded-full flex items-center justify-center bg-zinc-200 text-zinc-800 text-lg">
          <i class="ri-edit-line"></i>
        </span>
        <div class="w-32 h-32 bg-zinc-200 rounded-full overflow-hidden">
          <img class="w-full h-full object-cover" src="/images/uploads/<%= userData?.profileImage %>" alt="">
        </div>
      </div>
      <h1 class="text-2xl mt-5 font-semibold"><%= userData.name %></h1>
      <h3 class="text-md">@<%= userData.username %></h3>
      <a href="/edit" class="mt-5 px-7 py-2 bg-zinc-200 rounded-full font-semibold text-xs">Edit</a>
      <a href="/add" class="px-10 py-2 mt-2 rounded-full bg-red-600 text-white font-semibold text-xs">Add New Post</a>
    </div>

    <div class="cards flex flex-wrap gap-10 justify-center mt-10 w-full">
      <div class="card <%= userData?.posts.length > 0 ? 'opacity-100' : 'hidden' %>">
        <div class="w-52 h-40 bg-zinc-100 rounded-lg overflow-hidden">
          <img class="w-full h-full object-cover" src="/images/uploads/<%= userData?.posts[0]?.image %>" alt="">
        </div>
        <a href="/show/posts" class="inline-block text-xl font-semibold mt-3">Your uploaded posts</a>
        <h5 class="text-sm font-medium opacity-70"><%= userData?.posts.length %> Pins</h5>
      </div>
    </div>

    <script>
      document.querySelector("#uploadicon").addEventListener("click", () => {
        document.querySelector("#uploadform input").click();
      });

      document.querySelector("#uploadform").addEventListener("change", () => {
        document.querySelector("#uploadform").submit();
      })
    </script>
  </div>
<% include ./partials/footer.ejs %>